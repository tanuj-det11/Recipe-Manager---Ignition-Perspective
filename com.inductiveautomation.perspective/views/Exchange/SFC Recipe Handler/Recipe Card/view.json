{
  "custom": {},
  "params": {
    "recipe_id": null,
    "recipe_name": "",
    "description": "",
    "total_days": 0,
    "step_count": 0,
    "isSelected": false
  },
  "propConfig": {
    "params.recipe_id": {
      "paramDirection": "input"
    },
    "params.recipe_name": {
      "paramDirection": "input"
    },
    "params.description": {
      "paramDirection": "input"
    },
    "params.total_days": {
      "paramDirection": "input"
    },
    "params.step_count": {
      "paramDirection": "input"
    },
    "params.isSelected": {
      "paramDirection": "input"
    }
  },
  "props": {
    "defaultSize": {
      "height": 95,
      "width": 180
    }
  },
  "root": {
    "meta": {
      "name": "root"
    },
    "propConfig": {
      "props.style.border": {
        "binding": {
          "type": "expr",
          "config": {
            "expression": "if({view.params.isSelected}, '3px solid #6ECEB2', '1px solid rgba(110, 206, 178, 0.4)')"
          }
        }
      },
      "props.style.backgroundColor": {
        "binding": {
          "type": "expr",
          "config": {
            "expression": "if({view.params.isSelected}, 'rgba(110, 206, 178, 0.15)', 'rgba(30, 30, 30, 0.9)')"
          }
        }
      },
      "props.style.boxShadow": {
        "binding": {
          "type": "expr",
          "config": {
            "expression": "if({view.params.isSelected}, '0 0 20px rgba(110, 206, 178, 0.4)', '0 2px 8px rgba(0,0,0,0.3)')"
          }
        }
      }
    },
    "props": {
      "direction": "column",
      "justify": "center",
      "alignItems": "center",
      "style": {
        "backgroundColor": "rgba(30, 30, 30, 0.9)",
        "borderRadius": "10px",
        "border": "1px solid rgba(110, 206, 178, 0.4)",
        "padding": "18px 12px",
        "minHeight": "95px",
        "cursor": "pointer",
        "transition": "all 0.2s ease"
      }
    },
    "children": [
      {
        "meta": {"name": "Name"},
        "propConfig": {
          "props.text": {
            "binding": {
              "type": "property",
              "config": {
                "path": "view.params.recipe_name"
              }
            }
          },
          "props.style.fontSize": {
            "binding": {
              "type": "expr",
              "config": {
                "expression": "if(len({view.params.recipe_name}) > 12, '13px', '18px')"
              }
            }
          }
        },
        "props": {
          "text": "",
          "style": {
            "fontSize": "18px",
            "fontWeight": "bold",
            "color": "#FFFFFF",
            "marginBottom": "6px",
            "textAlign": "center"
          }
        },
        "type": "ia.display.label"
      },
      {
        "meta": {"name": "Days"},
        "propConfig": {
          "props.text": {
            "binding": {
              "type": "expr",
              "config": {
                "expression": "toString({view.params.total_days}) + ' Days'"
              }
            }
          }
        },
        "props": {
          "text": "",
          "style": {
            "fontSize": "14px",
            "color": "#6ECEB2",
            "fontWeight": "bold"
          }
        },
        "type": "ia.display.label"
      },
      {
        "meta": {"name": "Steps"},
        "propConfig": {
          "props.text": {
            "binding": {
              "type": "expr",
              "config": {
                "expression": "toString({view.params.step_count}) + ' Steps'"
              }
            }
          }
        },
        "props": {
          "text": "",
          "style": {
            "fontSize": "11px",
            "color": "#888888",
            "marginTop": "2px"
          }
        },
        "type": "ia.display.label"
      }
    ],
    "type": "ia.container.flex",
    "events": {
      "component": {
        "onClick": {
          "type": "script",
          "scope": "G",
          "config": {
            "script": "recipe_id = self.view.params.recipe_id\nrecipe_name = self.view.params.recipe_name\ndescription = self.view.params.description\ntotal_days = self.view.params.total_days\nstep_count = self.view.params.step_count\n\nparentView = self.parent.parent.parent.parent\n\nparentView.custom.selectedRecipe = recipe_name\nparentView.custom.selectedRecipeId = recipe_id\nparentView.custom.selectedData.name = recipe_name\nparentView.custom.selectedData.description = description\nparentView.custom.selectedData.totalDays = total_days\nparentView.custom.selectedData.stepCount = step_count"
          }
        }
      }
    }
  }
}
