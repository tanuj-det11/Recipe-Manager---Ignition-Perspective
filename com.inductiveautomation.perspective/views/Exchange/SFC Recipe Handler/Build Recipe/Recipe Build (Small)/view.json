{
  "custom": {},
  "params": {
    "addStep": false,
    "modifyRecipe": true
  },
  "propConfig": {
    "params.addStep": {
      "paramDirection": "input",
      "persistent": true
    },
    "params.modifyRecipe": {
      "paramDirection": "input",
      "persistent": true
    }
  },
  "props": {
    "defaultSize": {
      "height": 869,
      "width": 510
    },
    "loading": {
      "mode": "blocking"
    }
  },
  "root": {
    "children": [
      {
        "events": {
          "component": {
            "onActionPerformed": {
              "config": {
                "script": "\t#hide/show configure step and recipe\n\tstate\u003dself.custom.state\n\tif state:\n\t\tself.custom.state\u003dFalse\n\telse:\n\t\tself.custom.state\u003dTrue"
              },
              "scope": "G",
              "type": "script"
            }
          }
        },
        "meta": {
          "name": "Add Step Button"
        },
        "position": {
          "basis": "35px",
          "shrink": 0
        },
        "propConfig": {
          "custom.state": {
            "binding": {
              "config": {
                "bidirectional": true,
                "path": "view.params.addStep"
              },
              "type": "property"
            }
          },
          "props.text": {
            "binding": {
              "config": {
                "expression": "if({this.custom.state},\"Configure Recipe\",\"Configure Step\")"
              },
              "type": "expr"
            }
          }
        },
        "props": {
          "image": {
            "icon": {
              "path": "material/post_add"
            }
          },
          "primary": false,
          "style": {
            "margin": "2px"
          }
        },
        "type": "ia.input.button"
      },
      {
        "meta": {
          "name": "EmbeddedView Step Config"
        },
        "position": {
          "basis": "500px",
          "grow": 1,
          "shrink": 0
        },
        "propConfig": {
          "position.display": {
            "binding": {
              "config": {
                "path": "../EmbeddedView Recipe Config.props.params.addStep"
              },
              "type": "property"
            }
          },
          "props.params.selRowData": {
            "binding": {
              "config": {
                "path": "../EmbeddedView Recipe Config.props.params.selRowData"
              },
              "type": "property"
            }
          }
        },
        "props": {
          "params": {
            "StepDescription": "Change Value",
            "complete": true,
            "function": 1,
            "params": {
              "p1": 0,
              "p1Unit": "",
              "p2": 0,
              "p2Unit": "",
              "p3": 0,
              "p3Unit": "",
              "pause": false,
              "t1": ""
            }
          },
          "path": "Exchange/SFC Recipe Handler/Build Recipe/Step Setup"
        },
        "type": "ia.display.view"
      },
      {
        "meta": {
          "name": "EmbeddedView Recipe Config"
        },
        "position": {
          "basis": "320px",
          "grow": 1
        },
        "propConfig": {
          "position.display": {
            "binding": {
              "config": {
                "expression": "!{view.params.addStep}"
              },
              "type": "expr"
            }
          },
          "props.params.addStep": {
            "binding": {
              "config": {
                "bidirectional": true,
                "path": "view.params.addStep"
              },
              "type": "property"
            }
          },
          "props.params.modifyRecipe": {
            "binding": {
              "config": {
                "path": "view.params.modifyRecipe"
              },
              "type": "property"
            }
          },
          "props.params.stepData": {
            "binding": {
              "config": {
                "path": "../EmbeddedView Step Config.props.params"
              },
              "type": "property"
            }
          }
        },
        "props": {
          "params": {
            "selRowData": {
              "Pause": 0,
              "p1": 0,
              "p1Unit": "",
              "p2": 0,
              "p2Unit": "",
              "p3": 0,
              "p3Unit": "",
              "recipe_function": 1,
              "step_descrip": "",
              "t1": ""
            }
          },
          "path": "Exchange/SFC Recipe Handler/Build Recipe/Recipe View Table (Small)"
        },
        "type": "ia.display.view"
      }
    ],
    "meta": {
      "name": "root"
    },
    "props": {
      "direction": "column"
    },
    "type": "ia.container.flex"
  }
}